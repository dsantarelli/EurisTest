@model EURISTest.Models.Catalog.CatalogDeleteViewModel
@{ ViewBag.Title = "Delete Catalog"; }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="euris-panel">
        <div class="header">
            Do you confirm to delete this catalog?
        </div>
        <div class="toolbar">
            <input type="submit" value="Delete" class="button button-danger" />
            <input type="button" value="Cancel" class="button button-primary" onclick="location.href='@Url.Action("Index")'" />
        </div>
        <div class="body">
            <div>
                @Html.LabelFor(model => model.Catalog.Code)
                <div>@Html.DisplayFor(model => model.Catalog.Code)</div>
            </div>
            <div style="margin-top: 10px">
                @Html.LabelFor(model => model.Catalog.Description)
                <div>@Html.DisplayFor(model => model.Catalog.Description)</div>
            </div>
            <div style="margin-top: 10px">
                @Html.LabelFor(model => model.Catalog.Products)
                @if (Model.Catalog.Products.Count == 0)
                {
                    <span class="no-item-message">No associated products</span>
                }
                else
                {
                    <ul>
                        @foreach (var product in Model.Catalog.Products)
                        {
                            <li>@Html.DisplayFor(modelItem => product.Description)</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
}
