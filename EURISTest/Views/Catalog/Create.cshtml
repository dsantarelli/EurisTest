@model EURISTest.Models.Catalog.CatalogCreateViewModel
@{ ViewBag.Title = "Create Catalog"; }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="euris-panel">
        <div class="header">
            Create Catalog
        </div>
        <div class="toolbar">
            <input type="submit" value="Save" class="button button-success" />
            <input type="button" value="Cancel" class="button button-primary" onclick="location.href='@Url.Action("Index")'" />
        </div>
        <div class="body">
            <div>
                @Html.LabelFor(model => model.Code)
                <div>
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @style = "width: 50%" } })
                    @Html.ValidationMessageFor(model => model.Code)
                </div>
            </div>
            <div>
                @Html.LabelFor(model => model.Description)
                <div>
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @style = "width: 50%" } })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div style="margin-top: 5px">
                @Html.LabelFor(model => model.Products)
                <div style="margin-top: 5px">
                    @{
                        foreach (var item in Model.Products)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="SelectedProducts" value="@item.Value" /> @item.Text
                                </label>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
